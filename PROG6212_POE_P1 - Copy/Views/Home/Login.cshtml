@{
    ViewBag.Title = "Login";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f7f9;
    }

    .login-container {
        max-width: 400px;
        margin: 60px auto;
        background: #fff;
        padding: 30px 35px;
        border-radius: 12px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.08);
    }

        .login-container h2 {
            text-align: center;
            margin-bottom: 25px;
            color: #333;
        }

    label {
        display: block;
        margin: 10px 0 5px;
        font-weight: 600;
        color: #444;
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 8px;
        font-size: 14px;
        margin-bottom: 15px;
    }

    button {
        width: 100%;
        padding: 12px;
        background: #007bff;
        border: none;
        border-radius: 8px;
        color: #fff;
        font-size: 16px;
        cursor: pointer;
        transition: background 0.3s ease;
    }

        button:hover {
            background: #0056b3;
        }

    .helper-text {
        text-align: center;
        margin-top: 15px;
        font-size: 14px;
    }

        .helper-text a {
            color: #007bff;
            text-decoration: none;
        }

            .helper-text a:hover {
                text-decoration: underline;
            }
</style>

<div class="login-container">
    <h2>Lecturer Login</h2>

    <form>
        <label>Username:</label>
        <input type="text" placeholder="Enter your username" />

        <label>Password:</label>
        <input type="password" placeholder="Enter your password" />

        <button type="submit">Login</button>
    </form>

    <div class="helper-text">
        <p><a href="#">Forgot Password?</a></p>
    </div>
</div>
