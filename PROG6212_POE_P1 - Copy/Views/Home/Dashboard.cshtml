@{
    ViewBag.Title = "Dashboard";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f7f9;
    }

    .dashboard-container {
        max-width: 900px;
        margin: 40px auto;
        background: #fff;
        padding: 25px 30px;
        border-radius: 12px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.08);
    }

        .dashboard-container h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
            font-weight: 600;
        }

    .dashboard-links {
        text-align: center;
        margin-bottom: 20px;
    }

        .dashboard-links a {
            color: #007bff;
            text-decoration: none;
            margin: 0 15px;
            font-weight: 600;
        }

            .dashboard-links a:hover {
                text-decoration: underline;
            }

    table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        margin-top: 10px;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0,0,0,0.05);
    }

        table th,
        table td {
            padding: 12px 15px;
            border: 1px solid #ddd;
            text-align: center;
            font-size: 14px;
        }

        table th {
            background-color: #007bff;
            color: white;
            font-weight: 600;
        }

        table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        table tr:hover {
            background-color: #eef5ff;
        }

    .status-submitted {
        color: #007bff;
        font-weight: 600;
    }

    .status-approved {
        color: #28a745;
        font-weight: 600;
    }

    .status-rejected {
        color: #dc3545;
        font-weight: 600;
    }
</style>

<div class="dashboard-container">
    <h2>Dashboard - My Claims</h2>

    <div class="dashboard-links">
        <a href="/Home/ClaimForm">Submit New Claim</a> |
        <a href="/Home/Login">Logout</a>
    </div>

    <table>
        <tr>
            <th>Claim ID</th>
            <th>Date Submitted</th>
            <th>Hours Worked</th>
            <th>Rate</th>
            <th>Amount</th>
            <th>Status</th>
        </tr>
        <tr>
            <td>1</td>
            <td>2025-09-15</td>
            <td>20</td>
            <td>R200</td>
            <td>R4000</td>
            <td class="status-submitted">Submitted</td>
        </tr>
    </table>
</div>
