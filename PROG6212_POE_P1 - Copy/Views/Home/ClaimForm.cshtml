@{
    ViewBag.Title = "Submit Claim";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f7f9;
    }

    .claim-container {
        max-width: 500px;
        margin: 40px auto;
        background: #fff;
        padding: 25px 30px;
        border-radius: 12px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.08);
    }

        .claim-container h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

    label {
        display: block;
        margin: 10px 0 5px;
        font-weight: 600;
        color: #444;
    }

    input[type="number"],
    input[type="file"] {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 8px;
        font-size: 14px;
        margin-bottom: 15px;
    }

    button {
        width: 100%;
        padding: 12px;
        background: #007bff;
        border: none;
        border-radius: 8px;
        color: #fff;
        font-size: 16px;
        cursor: pointer;
        transition: background 0.3s ease;
    }

        button:hover {
            background: #0056b3;
        }
</style>

<div class="claim-container">
    <h2>Submit Monthly Claim</h2>

    <form>
        <label>Hours Worked:</label>
        <input type="number" placeholder="Enter total hours worked" />

        <label>Hourly Rate:</label>
        <input type="number" placeholder="Enter hourly rate" />

        <label>Upload Document:</label>
        <input type="file" />

        <button type="submit">Submit Claim</button>
    </form>
</div>
